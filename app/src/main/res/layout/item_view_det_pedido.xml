<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@color/colorBlanco"
        android:clickable="true"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        app:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardElevation="@dimen/card_recycler_elevation"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <LinearLayout
            android:showDividers="middle"
            android:divider="@drawable/empty_tall_divider_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Descripción"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_mat_descrip"
                    android:text="Descripción del material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_mat_cantidad"
                    android:textColor="@color/material_green_500"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:gravity="right"
                    android:text="30 bultos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <com.itoaxaca.yurta.utilerias.RoundedImageView
                    android:id="@+id/iv_material"
                    android:tag="image_tag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:src="@drawable/clavos"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:id="@+id/ic_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_weight="0"
                        android:src="@drawable/ic_delete_black_24dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>