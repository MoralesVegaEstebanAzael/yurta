<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    app:cardCornerRadius="@dimen/card_recycler_corner_radius"
    app:cardElevation="@dimen/card_recycler_elevation"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <LinearLayout
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="match_parent">
            <com.itoaxaca.yurta.utilerias.RoundedImageView
                android:id="@+id/iv_report"
                android:tag="image_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:src="@drawable/clavos"/>
            <LinearLayout
                android:background="@color/colorBlueDark"
                android:layout_weight=".8"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tv_report_unidad"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorBlanco"
                    android:gravity="center_horizontal"
                    android:text="Unidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--            <ImageView
                        android:layout_weight="0"
                        android:layout_gravity="center_horizontal |center_vertical"
                        android:padding="10dp"
                        android:background="@drawable/circlebackground2"
                        android:src="@drawable/ic_construccion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="Descripción"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_report_descrip"
                android:text="Descripción del material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="Existencias"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_report_exis"
                android:text="52 unidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:showDividers="middle"
            android:divider="@drawable/empty_tall_divider_white"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="15dp" />
                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cbSelect"
                    android:layout_width="0dip"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:button="@drawable/ic_check_box_outline_blank_black_24dp"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <TextView
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="Utilizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_reporte_gasto"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlanco"
                android:text="0"
                android:layout_margin="5dp"
                android:background="@color/material_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>